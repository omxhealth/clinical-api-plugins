<div class="medication-search">
  <form action="/" method="POST" id="sample-form">
    <div class='form-row mt-4'>
      <label>Medication 1:</label>
    </div>
    <div class='form-row'>
      <db-medication-search
        refresh-jwt="/protected-refresh-jwt"
        name="medications[0]"
        value="<%= @medications['0'] %>"
        shared-jwt="true"
      ></db-medication-search>
    </div>
    <div class='form-row section-start'>
      <h5>Modified step order</h5>
    </div>
    <div class='form-row'>
      <label>Medication 2:</label>
    </div>
    <div class='form-row'>
      <db-medication-search
        refresh-jwt="/protected-refresh-jwt"
        name="medications[1]"
        value="<%= @medications['1'] %>"
        search-stages="route,form,strengths"
        shared-jwt="true"
      ></db-medication-search>
    </div>
    <div class='form-row section-start'>
      <h5>Change Minimum Level (2)</h5>
    </div>
    <div class='form-row'>
      <label>Medication 3:</label>
    </div>
    <div class='form-row'>
      <db-medication-search
        refresh-jwt="/protected-refresh-jwt"
        name="medications[2]"
        value="<%= @medications['2'] %>"
        min-level="2"
        shared-jwt="true"
      ></db-medication-search>
    </div>
    <div class='form-row section-start'>
      <h5>Restyled</h5>
    </div>
    <div class='form-row'>
      <label>Medication 4:</label>
    </div>
    <div class='form-row styled'>
      <db-medication-search
        refresh-jwt="/protected-refresh-jwt"
        name="medications[3]"
        value="<%= @medications['3'] %>"
        shared-jwt="true"
      ></db-medication-search>
    </div>
    <div class='form-row section-start'>
      <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
    </div>
  </form>
  <div id="message" class="mt-5">
    <% if @medications && !@medications.empty? %>
      <h5>Selected Medications</h5>
      <ul>
        <% @medications.values.each do |dbpcid| %>
          <li><%= dbpcid %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
<style>
  .styled {
    --db-lookup-extra-padding-vertical: 10px;
    --db-lookup-extra-padding-horizontal: 20px;
    --db-lookup-corner-radius: 5px;
    --db-lookup-border-width: 2px;
    --db-lookup-font-family: courier;
    --db-tag-corner-radius: 10px;
    --db-tag-extra-padding-horizontal: 10px;
    --db-tag-extra-padding-vertical: 10px;
  }
</style>
